<body>
    <main class="container">
           <section class="mt-3">
        <h3>Cursos cadastrados</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Título</th>
              <th scope="col">Duração</th>
              <th scope="col">Preço</th>
              <th scope="col">Data</th>
            </tr>
          </thead>
          <tbody>
          <% courses.forEach(function(course) { %>
            <tr>
              <th scope="row"><%- course.id %></th>
              <td><%- course.tittle %></td>
              <td><%- course.extent %></td>
              <td><%- course.price %></td>
              <td><%- course.date %></td>
              <td>
                <div class="row">
                  <div class="col-md-3">
                    <a
                      role="button"
                      href="/curso/edit/<%-course.id%>"
                      class="btn btn-warning"
                    >
                      Editar
                    </a>
                  </div>
                  <div class="col-md-3">
                    <form method="POST" action="/curso?_method=DELETE">
                      <input type="text" hidden name="id" value="<%-course.id%>" />
                      <button role="delete" data-courses-id="<%-course.id%> type="submit" class="btn btn-danger">
                        Excluir
                      </button>
                    </form>
                  </div>
                </div>
              </td>
            </tr>
            <% });%>
          </tbody>
        </table>
      </section>
      <section class="mt-3">
        <h3>Cadastro novo curso</h3>
        <form action="" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12">
                  <label for="tittle" class="form-label">Título</label>
                  <input
                    class="form-control"
                    type="text"
                    id="tittle"
                    name="tittle"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="extent" class="form-label">Duração</label>
                  <input
                    class="form-control"
                    type="text"
                    id="extent"
                    name="extent"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="price" class="form-label">Preço</label>
                  <input
                    class="form-control"
                    type="text"
                    id="price"
                    name="price"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="date" class="form-label">Data</label>
                  <input
                    class="form-control"
                    type="text"
                    id="date"
                    name="date"
                    required
                  />
                </div>
                <div class="mt-1 d-flex justify-content-end">
                  <button type="reset" class="btn btn-default">Cancelar</button>
                  <button type="submit" class="btn btn-primary">
                    Cadastrar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
