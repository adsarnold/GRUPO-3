    <main class="container">
      <h1>Edição cursos</h1>
      <hr />
      <section class="mt-3">
        <form action="/cursos?_method=put" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12">
                  <label for="tittle" class="form-label">Id</label>
                  <input
                    class="form-control"
                    type="text"
                    id="id"
                    name="id"
                    value="<%- courses.id %>"
                    readonly
                  />
                </div>
                <div class="col-md-12">
                  <label for="tittle" class="form-label">Título</label>
                  <input
                    class="form-control"
                    type="text"
                    id="tittle"
                    name="tittle"
                    value="<%- courses.tittle %>"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="extent" class="form-label">Duração</label>
                  <input
                    class="form-control"
                    type="text"
                    id="extent"
                    name="extent"
                    value="<%- courses.extent %>"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="price" class="form-label">Preço</label>
                  <input
                    class="form-control"
                    type="text"
                    id="price"
                    name="price"
                    value="<%- courses.price%>"
                    required
                  />
                </div>
                <div class="mt-1 d-flex justify-content-end">
                  <a
                    role="button"
                    href="/cursos"
                    type="reset"
                    class="btn btn-default"
                    >Cancelar</a
                  >
                  <button type="submit" class="btn btn-primary">
                    Atualizar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
