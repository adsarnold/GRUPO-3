<!DOCTYPE html>
<html>
  <head>
    <title>USUÁRIO</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    

    <main class="container">
      <h1>USUÁRIO</h1>
      <hr />
      <section class="mt-3">
        <h3>Usuários cadastrados</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">Endereço</th>
              <th scope="col">CPF</th>
              <th scope="col">Data</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(users) { %>
            <tr>
              <th scope="row"><%- users.id %></th>
              <td><%- users.name %></td>
              <td><%- users.adress %></td>
              <td><%- users.cpf %></td>
              <td><%- users.date %></td>
              <td>
                <div class="row">
                  <div class="col-md-3">
                    <a
                      role="button"
                      href="/users/edit/<%-users.id%>"
                      class="btn btn-warning"
                    >
                      Editar
                    </a>
                  </div>
                  <div class="col-md-3">
                    <form method="POST" action="/users?_method=DELETE">
                      <input type="text" hidden name="id" value="<%-users.id%>" />
                      <button role="delete" data-dishes-id="<%-users.id%> type="submit" class="btn btn-danger">
                        Excluir
                      </button>
                    </form>
                  </div>
                </div>
              </td>
            </tr>
            <% });%>
          </tbody>
        </table>
      </section>
      <section class="mt-3">
        <h3>Cadastro novo usuário</h3>
        <form action="" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12">
                  <label for="name" class="form-label">Nome</label>
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    name="name"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="adress" class="form-label">Endereço</label>
                  <input
                    class="form-control"
                    type="text"
                    id="adress"
                    name="adress"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="cpf" class="form-label">CPF</label>
                  <input
                    class="form-control"
                    type="text"
                    id="cpf"
                    name="cpf"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="ingredients" class="form-label">Data</label>
                  <input
                    class="form-control"
                    type="text"
                    id="date"
                    name="date"
                    required
                  />
                </div>
                <div class="mt-1 d-flex justify-content-end">
                  <button type="reset" class="btn btn-default">Cancelar</button>
                  <button type="submit" class="btn btn-primary">
                    Cadastrar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
    </main>

